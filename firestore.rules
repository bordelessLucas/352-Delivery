rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para cupons - apenas o usuário autenticado pode acessar seus próprios cupons
    match /cupons/{couponId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Regras para produtos - apenas o usuário autenticado pode acessar seus próprios produtos
    match /produtos/{productId} {
      // Permite leitura de todos os produtos para usuários autenticados (para migração)
      // TODO: Reverter para allow read: if request.auth != null && request.auth.uid == resource.data.userId; após migração
      allow read: if request.auth != null;
      // Permite atualização se o userId atual OU o novo userId corresponde ao usuário autenticado
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Regras para variações globais - apenas o usuário autenticado pode acessar suas próprias variações
    match /variacoesGlobais/{variationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Regras para configurações - documento único por usuário (ID = userId)
    match /configuracoes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para clientes - apenas o usuário autenticado pode acessar seus próprios clientes
    match /clientes/{clienteId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Regras para delivery - documento único por usuário (ID = userId)
    match /delivery/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para pedidos - apenas o usuário autenticado pode acessar seus próprios pedidos
    match /pedidos/{pedidoId} {
      // Permite leitura de todos os pedidos para usuários autenticados (para migração)
      // TODO: Reverter para allow read: if request.auth != null && request.auth.uid == resource.data.userId; após migração
      allow read: if request.auth != null;
      // Permite atualização se o userId atual OU o novo userId corresponde ao usuário autenticado
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
